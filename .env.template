# Environment Template

# API Configuration
API_BASE_URL_LOCAL="http://localhost:8000"
NEXT_PUBLIC_API_BASE_URL=""

# Debug Script Authentication (update these with your test user credentials)
DEBUG_USER_EMAIL="testuser@example.com"
DEBUG_USER_PASSWORD="Password123!"

# Agent Configuration
SECURITY_BYPASS_ENABLED="true"

# Anthropic settings
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LlamaParse
LLAMAPARSE_API_KEY=""
LLAMAPARSE_BASE_URL="https://api.cloud.llamaindex.ai"
WEBHOOK_SECRET="" # optional

# LangChain settings
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langchain_api_key_here

# Environment settings
LOG_LEVEL=INFO
ENVIRONMENT=development

# === Supabase ===
# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_postgres_password
DB_NAME=insurance_navigator

# Project Credentials
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# PostgreSQL Connection
DATABASE_URL=postgresql://postgres:your_postgres_password@localhost:5432/insurance_navigator

# Storage and File Access
SUPABASE_STORAGE_BUCKET=documents
SIGNED_URL_EXPIRY_SECONDS=3600

# Encryption Service
ENCRYPTION_KEY_PROVIDER=supabase
DEFAULT_ENCRYPTION_KEY_VERSION=1

# Auth Context
AUTH_MODE=jwt
JWT_SECRET_KEY=your-super-secret-jwt-key-minimum-32-characters-long-for-security
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Security Settings
SECURITY_VALIDATE_INPUTS=true
SECURITY_SANITIZE_OUTPUTS=true
SECURITY_MAX_TOKEN_LIMIT=4096

# Environment Configuration
NODE_ENV=development

# API Configuration
NEXT_PUBLIC_API_BASE_URL=""
NEXT_PUBLIC_API_VERSION=v1

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_WEB_URL=http://localhost:3000

# Authentication
NEXT_PUBLIC_AUTH_ENABLED=true
NEXT_PUBLIC_SESSION_TIMEOUT=3600000

# Feature Flags
NEXT_PUBLIC_CHAT_ENABLED=true
NEXT_PUBLIC_ANALYTICS_ENABLED=false
NEXT_PUBLIC_MAINTENANCE_MODE=false

# Third-party Services (leave empty for now)
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_HOTJAR_ID=
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=

# Debug and Development
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_MOCK_API=false

# Security
NEXT_PUBLIC_CSRF_TOKEN=
NEXT_PUBLIC_ALLOWED_ORIGINS=http://localhost:3000

# Theme and UI
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_BRAND_NAME=""

# Rate Limiting
NEXT_PUBLIC_RATE_LIMIT_ENABLED=true
NEXT_PUBLIC_MAX_REQUESTS_PER_MINUTE=60

# Cache Configuration
NEXT_PUBLIC_CACHE_TTL=300000
NEXT_PUBLIC_STATIC_CACHE_TTL=86400000
