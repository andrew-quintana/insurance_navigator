{
  "tasks": {
    "test": "deno test --allow-env --allow-net --allow-read --no-check"
  },
  "compilerOptions": {
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "lib": ["deno.window", "deno.ns"],
    "strict": true
  },
  "imports": {
    "std/": "https://deno.land/std@0.208.0/",
    "@supabase/supabase-js": "https://esm.sh/@supabase/supabase-js@2.39.3",
    "types/": "./types/",
    "djwt": "https://deno.land/x/djwt@v3.0.1/mod.ts",
    "_shared/": "./_shared/",
    "chunking-service/": "./chunking-service/",
    "upload-handler/": "./upload-handler/",
    "vector-service/": "./vector-service/",
    "tests/": "./tests/",
    "./upload-handler/types": "./upload-handler/types.ts",
    "./upload-handler/utils": "./upload-handler/utils.ts",
    "./upload-handler/storage": "./upload-handler/storage.ts",
    "./upload-handler/processor": "./upload-handler/processor.ts"
  },
  "importMap": "./import_map.json",
  "lint": {
    "files": {
      "include": ["**/*.ts"]
    },
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"]
    }
  },
  "fmt": {
    "files": {
      "include": ["**/*.ts"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
} 