{
  "tasks": {
    "dev": "deno run --allow-net --allow-env --watch index.ts"
  },
  "imports": {
    "@supabase/supabase-js": "https://esm.sh/@supabase/supabase-js@2.39.3",
    "std/": "https://deno.land/std@0.217.0/",
    "testing/": "https://deno.land/std@0.217.0/testing/"
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window", "dom"],
    "strict": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler"
  },
  "lint": {
    "files": {
      "include": ["**/*.ts"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "files": {
      "include": ["**/*.ts"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true
    }
  }
} 