# Test environment configuration
# Copy this file to .env.test and fill in your API keys

# Anthropic API key (required for real API tests)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Model configuration
ANTHROPIC_MODEL=claude-3-haiku-20240307  # Smaller, cheaper model for testing

# Test flags
USE_MOCK_LLM=true  # Set to false to use real Anthropic API
TEST_MODE=true  # Indicates we're in test mode (may affect some agents)

# Other API keys as needed for testing
OPENAI_API_KEY=your_openai_api_key_here
LLAMAPARSE_API_KEY=your_llamaparse_api_key_here

# Database configuration for testing (if needed)
# TEST_DB_CONNECTION_STRING=postgresql://user:password@localhost:5432/test_db 

# Supabase Test Environment Configuration
SUPABASE_URL=your_test_supabase_url
SUPABASE_ANON_KEY=your_test_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_test_supabase_service_role_key
SUPABASE_JWT_SECRET=your_test_supabase_jwt_secret  # Required for token verification
SUPABASE_STORAGE_BUCKET=test_documents  # The storage bucket for test documents

# Test Configuration
TEST_USER_ID=test_user_id  # Optional: Set this if you want to use a specific test user ID

# Vector Configuration
VECTOR_DIMENSION=1536  # OpenAI's embedding dimension
SIMILARITY_THRESHOLD=0.5
MAX_RESULTS=5

# Optional: Test Database Configuration (if needed)
TEST_DB_HOST=your_test_db_host
TEST_DB_PORT=5432
TEST_DB_NAME=postgres
TEST_DB_USER=postgres
TEST_DB_PASSWORD=your_test_db_password 