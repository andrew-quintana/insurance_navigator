{
  "name": "frontend-integration-tests",
  "version": "1.0.0",
  "description": "Comprehensive frontend integration tests for the insurance navigator system",
  "main": "index.js",
  "scripts": {
    "test:integration": "vitest run",
    "test:integration:watch": "vitest",
    "test:full-system": "vitest run scenarios/full-system.test.ts",
    "test:real-system": "vitest run scenarios/real-system-integration.test.ts",
    "test:production-readiness": "vitest run scenarios/production-readiness.test.ts",
    "test:security": "vitest run scenarios/security-validation.test.ts",
    "test:accessibility": "vitest run scenarios/accessibility.test.ts",
    "test:all": "vitest run scenarios/",
    "start:environment": "docker-compose -f docker-compose.full.yml up -d",
    "stop:environment": "docker-compose -f docker-compose.full.yml down -v",
    "wait:services": "node setup/wait-for-services.js",
    "reset:data": "docker-compose -f docker-compose.full.yml exec -T postgres psql -U postgres -d postgres -c \"TRUNCATE upload_pipeline.documents CASCADE; TRUNCATE upload_pipeline.upload_jobs CASCADE;\"",
    "performance:real-system": "cd performance && node run-real-system-performance.js"
  },
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "node-fetch": "^3.3.2",
    "vitest": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "integration-tests",
    "frontend",
    "e2e",
    "testing"
  ],
  "author": "Insurance Navigator Team",
  "license": "MIT"
}