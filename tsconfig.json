{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["node", "jest"]
  },
  "include": [
    "config/**/*.ts",
    "scripts/**/*.ts",
    "supabase/functions/**/*.ts",
    "tests/**/*.ts"
, "supabase/_shared/env.ts"  ],
  "exclude": [
    "node_modules"
  ],
  "lint": {
    "files": {
      "include": ["supabase/functions/tests/"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "files": {
      "include": ["supabase/functions/tests/"]
    },
    "options": {
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true
    }
  }
} 