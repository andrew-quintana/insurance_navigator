# Supabase Configuration
SUPABASE_URL=your-staging-project-url
SUPABASE_ANON_KEY=your-staging-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-staging-service-role-key
SUPABASE_JWT_SECRET=your-staging-jwt-secret
SUPABASE_PROJECT_ID=your-staging-project-id

# Database Configuration
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
DB_HOST=db.[YOUR-PROJECT-REF].supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_SCHEMA=public

# Storage Configuration
STORAGE_BUCKET=staging-documents
STORAGE_REGION=us-east-1

# Security & Monitoring
LOG_LEVEL=debug
ENABLE_ERROR_TRACKING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_AUDIT_LOGGING=true

# API Configuration
API_URL=https://staging-api.insurance-navigator.com
FRONTEND_URL=https://staging.insurance-navigator.com

# Document Processing
LLAMAPARSE_API_KEY=your-staging-llamaparse-key
OPENAI_API_KEY=your-staging-openai-key
MAX_DOCUMENT_SIZE=10485760 # 10MB

# Feature Flags
ENABLE_HIPAA_LOGGING=true
ENABLE_ADVANCED_SECURITY=true

# Monitoring & Alerting
SENTRY_DSN=your-staging-sentry-dsn
DATADOG_API_KEY=your-staging-datadog-key 