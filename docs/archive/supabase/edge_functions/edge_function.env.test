# Test Environment Configuration Template
# Copy this file to your edge function's test directory as .env.test

# Required Variables (must be present in all environments)
SUPABASE_URL=http://127.0.0.1:54321
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
OPENAI_API_KEY=your_openai_key_here
NODE_ENV=test

# Optional Enhancement Variables
LLAMAPARSE_API_KEY=your_llamaparse_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
DEBUG=true

# Boolean Feature Flags
ENABLE_VECTOR_PROCESSING=true
ENABLE_REGULATORY_PROCESSING=true

# Test-Specific Configuration
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=SecureTest123!
TEST_MODE=true
MOCK_EXTERNAL_SERVICES=true

# Database Configuration
SUPABASE_DB_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres
SUPABASE_DB_HOST=127.0.0.1
SUPABASE_DB_PORT=54322
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=postgres

# Storage Configuration
SUPABASE_STORAGE_BUCKET=test_documents
SUPABASE_TEMP_STORAGE_PATH=temp_test_files

# Security Configuration
ENCRYPTION_ENABLED=true
AUDIT_LOGGING_ENABLED=true
CONSENT_VERSION=1.0

# Test Runtime Configuration
MAX_RETRIES=10
RETRY_DELAY=2
LOG_LEVEL=DEBUG
LOG_FILE=tests/logs/test.log

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
API_DEBUG=true

# JWT Configuration
JWT_SECRET=test_jwt_secret_key
SUPABASE_JWT_SECRET=test_jwt_secret_key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30 